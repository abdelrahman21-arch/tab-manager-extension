{
  "manifest_version": 3,
  "name": "Basic Tab Manager",
  "version": "1.0",
  "description": "A simple Chrome extension to manage tabs.",
  "permissions": [
    "tabs",
    "storage",
    "tabGroups",
    "contextMenus",
    "scripting"
    ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "HTMLs/popup.html"
    },
  "commands": {
    "close-duplicate-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Close duplicate tabs"
    },
    "suspend-inactive-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Suspend inactive tabs"
    }
  },
  "icons": {
    "128": "images/icon-128.png"
  }
}
